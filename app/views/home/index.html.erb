
<div class="d-flex align-items-center"> <!-- wraps title and image in a div so img sits next to title and add margin so not against top border -->
  <h1 class="me-3">Welcome to my Football App</h1>
  <%= image_tag "football.png", size: "150x150", class: "img-fluid mt-3", alt: "Football"%>
</div>

<%= form_with(url: search_players_path, method: :get, local: true) do %>
  <%= label_tag :query, "Search Players:" %>
  <%= text_field_tag :query, params[:query] %>
  <%= submit_tag "Search" , class: 'btn btn-primary mt-2' %>
<% end %>

<h2>Navigation</h2>
<ul class="list-group">
  <li class="list-group-item"><%= link_to 'Players', players_path %></li>
  <li class="list-group-item"><%= link_to 'Teams', teams_path %></li>
  <li class="list-group-item"><%= link_to 'Coaches', coaches_path %></li>
  <li class="list-group-item"><%= link_to 'Competitions', competitions_path %></li>
  <li class="list-group-item"><%= link_to 'Positions', positions_path %></li>
  <li class="list-group-item"><%= link_to 'About', about_path %></li>
</ul>